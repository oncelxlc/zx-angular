{
  "name": "zx-angular",
  "description": "Personal website developed based on Angular",
  "homepage": "https://github.com/oncelxlc/zx-angular",
  "bugs": "https://github.com/oncelxlc/zx-angular/issue",
  "version": "0.0.1",
  "scripts": {
    "ng": "ng",
    "start": "ng serve zx-ng",
    "build": "ng build zx-ng --configuration development",
    "test": "ng test zx-ng",
    "build:builders": "tsc --project builders/tsconfig.json",
    "build:test": "ng copy-package zx-ng-test",
    "build:ui-css": "node tools/sass-handler.js components/styles/index.scss ./dist/zx-ui/ng-zx-ui.css",
    "minify:ui-css": "cleancss --format breakWith=lf --output ./dist/zx-ui/ng-zx-ui.min.css ./dist/zx-ui/ng-zx-ui.css",
    "build:css:ui": "npm run build:ui-css && npm run minify:ui-css",
    "prepare": "husky install"
  },
  "engines": {
    "node": "^16.14.0 || >=18.10.0",
    "npm": "^6.11.0 || ^7.5.6 || >=8.0.0",
    "yarn": ">=1.13.0",
    "pnpm": ">=8.0.0"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.3.7",
    "@angular/common": "^17.3.7",
    "@angular/compiler": "^17.3.7",
    "@angular/core": "^17.3.7",
    "@angular/forms": "^17.3.7",
    "@angular/platform-browser": "^17.3.7",
    "@angular/platform-browser-dynamic": "^17.3.7",
    "@angular/router": "^17.3.7",
    "@ant-design/colors": "^7.0.2",
    "ng-zorro-antd": "17.3.0",
    "ngx-progressbar": "^11.1.0",
    "nprogress": "^0.2.0",
    "rxjs": "~7.8.1",
    "tslib": "^2.6.2",
    "zone.js": "~0.14.5"
  },
  "devDependencies": {
    "@angular-devkit/architect": "^0.1703.6",
    "@angular-devkit/build-angular": "^17.3.6",
    "@angular-devkit/core": "^17.3.6",
    "@angular/cli": "^17.3.6",
    "@angular/compiler-cli": "^17.3.7",
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-angular": "^18.6.1",
    "@types/jasmine": "~4.3.6",
    "@types/node": "^20.12.10",
    "@types/nprogress": "^0.2.3",
    "@zhexian/builders-runner": "link:builders",
    "clean-css-cli": "^5.6.3",
    "fs-extra": "^11.2.0",
    "husky": "^8.0.3",
    "jasmine": "^5.1.0",
    "jasmine-core": "~4.6.0",
    "jasmine-node": "^3.0.0",
    "karma": "~6.4.3",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "^17.3.0",
    "path": "^0.12.7",
    "prettier": "^3.2.5",
    "sass": "^1.77.0",
    "ts-node": "^10.9.2",
    "typescript": "~5.2.2"
  }
}

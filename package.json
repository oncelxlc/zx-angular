{
  "name": "zx-angular",
  "description": "Material Design components for Angular",
  "homepage": "https://github.com/oncelxlc/zx-angular",
  "bugs": "https://github.com/oncelxlc/zx-angular/issue",
  "version": "0.0.1",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --host 0.0.0.0",
    "build": "ng build",
    "build:app": "ng build zx-app",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "build:ui": "ng build ng-zx-ui",
    "test:ui": "ng test ng-zx-ui",
    "build:ui-css": "node tools/sass-handler.js components/styles/index.scss ./dist/zx-ui/ng-zx-ui.css",
    "minify:ui-css": "cleancss --format breakWith=lf --output ./dist/zx-ui/ng-zx-ui.min.css ./dist/zx-ui/ng-zx-ui.css",
    "build:css:ui": "npm run build:ui-css && npm run minify:ui-css",
    "prepare": "husky install"
  },
  "engines": {
    "node": "^16.14.0 || >=18.10.0",
    "npm": "^6.11.0 || ^7.5.6 || >=8.0.0",
    "yarn": ">= 1.13.0"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^16.2.12",
    "@angular/common": "^16.2.12",
    "@angular/compiler": "^16.2.12",
    "@angular/core": "^16.2.12",
    "@angular/forms": "^16.2.12",
    "@angular/platform-browser": "^16.2.12",
    "@angular/platform-browser-dynamic": "^16.2.12",
    "@angular/router": "^16.2.12",
    "@ant-design/colors": "^7.0.2",
    "ng-zorro-antd": "^16.2.2",
    "rxjs": "~7.8.1",
    "tslib": "^2.6.2",
    "zone.js": "~0.13.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^16.2.11",
    "@angular/cli": "^16.2.11",
    "@angular/compiler-cli": "^16.2.12",
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-angular": "^18.4.4",
    "@types/jasmine": "~4.3.6",
    "clean-css-cli": "^5.6.3",
    "husky": "^8.0.3",
    "jasmine-core": "~4.6.0",
    "karma": "~6.4.2",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "^16.2.3",
    "prettier": "^3.1.1",
    "sass": "^1.69.7",
    "typescript": "~5.1.6"
  }
}

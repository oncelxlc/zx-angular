{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "cli": {
    "packageManager": "pnpm",
    "analytics": false
  },
  "newProjectRoot": "src",
  "schematics": {
    "@schematics/angular:component": {
      "style": "scss",
      "standalone": true
    },
    "@schematics/angular:directive": {
      "standalone": true
    },
    "@schematics/angular:pipe": {
      "standalone": true
    }
  },
  "projects": {
    "zx-ng": {
      "projectType": "application",
      "root": "site",
      "sourceRoot": "site/src",
      "prefix": "zxa",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:application",
          "options": {
            "outputPath": "dist/zx-ng",
            "index": "site/src/index.html",
            "browser": "site/src/main.ts",
            "polyfills": [
              "zone.js"
            ],
            "tsConfig": "site/tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              "site/src/favicon.ico",
              "site/src/assets",
              {
                "glob": "**/*",
                "input": "./docs/",
                "output": "/docs/"
              },
              {
                "glob": "**/*",
                "input": "./node_modules/@ant-design/icons-angular/src/inline-svg/",
                "output": "/assets/"
              }
            ],
            "styles": [
              "site/src/styles.scss",
              {
                "input": "ng-zorro-antd/ng-zorro-antd.dark.min.css",
                "bundleName": "dark",
                "inject": false
              },
              {
                "input": "site/src/styles/font/_font.scss",
                "bundleName": "font",
                "inject": false
              }
            ],
            "scripts": []
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kb",
                  "maximumError": "1mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "2kb",
                  "maximumError": "4kb"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "zx-ng:build:production"
            },
            "development": {
              "buildTarget": "zx-ng:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "buildTarget": "zx-ng:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "polyfills": [
              "zone.js",
              "zone.js/testing"
            ],
            "tsConfig": "site/tsconfig.spec.json"
          }
        }
      }
    },
    "zx-ng-test": {
      "projectType": "application",
      "root": "site",
      "sourceRoot": "site/src",
      "prefix": "zxa",
      "architect": {
        "copy-package": {
          "builder": "@zhexian/builders-runner:copy",
          "options": {
            "source": "package.json",
            "destination": "package-copy.json"
          }
        },
        "build": {
          "builder": "@angular-devkit/build-angular:application",
          "options": {
            "outputPath": "dist/zx-ng",
            "index": "site/src/index.html",
            "browser": "site/src/main.ts",
            "polyfills": [
              "zone.js"
            ],
            "tsConfig": "site/tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              "site/src/favicon.ico",
              "site/src/assets"
            ],
            "styles": [
              "site/src/styles.scss"
            ],
            "scripts": []
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kb",
                  "maximumError": "1mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "2kb",
                  "maximumError": "4kb"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "zx-ng:build:production"
            },
            "development": {
              "buildTarget": "zx-ng:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "buildTarget": "zx-ng:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "polyfills": [
              "zone.js",
              "zone.js/testing"
            ],
            "tsConfig": "site/tsconfig.spec.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              "site/src/favicon.ico",
              "site/src/assets"
            ],
            "styles": [
              "site/src/styles.scss"
            ],
            "scripts": []
          }
        }
      }
    },
    "ngx-zx": {
      "projectType": "library",
      "root": "components",
      "sourceRoot": "components",
      "prefix": "zx",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "components/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "components/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "components/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "tsConfig": "components/tsconfig.spec.json",
            "polyfills": [
              "zone.js",
              "zone.js/testing"
            ]
          }
        }
      }
    }
  }
}

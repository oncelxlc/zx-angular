/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": false,
    "outDir": "./dist/out-tsc",
    "paths": {
      "@ngx-zx/*": [
        "../ngx-zx/*"
      ],
      "@zxa-components/*": [
        "./src/components/*"
      ],
      "@zxa-pages/*": [
        "./src/pages/*"
      ],
      "@zxa-routes/*": [
        "./src/routes/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/test.ts",
    "node_modules"
  ]
}
